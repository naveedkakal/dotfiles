# ============================================================================
# Starship Prompt Configuration - Powerlevel10k Rainbow Style
# https://starship.rs/config/
# ============================================================================

# Timeout for commands (in milliseconds)
command_timeout = 1000

# Format string (defines order and content)
format = """
$time\
$directory\
$git_branch\
$git_status\
$line_break\
$character"""

# ============================================================================
# Prompt Character
# ============================================================================

[character]
success_symbol = "[❯](bold green)"
error_symbol = "[❯](bold red)"
vimcmd_symbol = "[❮](bold green)"

# ============================================================================
# Time
# ============================================================================

[time]
disabled = false
time_format = "%H:%M:%S"
style = "bg:#515151 fg:bold #cccccc"
format = "[ $time ]($style)[](fg:#515151 bg:#6699cc)"

# ============================================================================
# Directory
# ============================================================================

[directory]
style = "bg:#6699cc fg:bold #2d2d2d"
format = "[  $path ]($style)[](fg:#6699cc bg:#99cc99)"
truncation_length = 3
truncate_to_repo = false
truncation_symbol = "…/"

[directory.substitutions]
"Documents" = "󰈙 "
"Downloads" = " "
"Music" = " "
"Pictures" = " "

# ============================================================================
# Git Branch
# ============================================================================

[git_branch]
symbol = " "
style = "bg:#99cc99 fg:bold #2d2d2d"
format = "[ $symbol$branch ]($style)"
truncation_length = 25

# ============================================================================
# Git Status
# ============================================================================

[git_status]
style = "bg:#99cc99 fg:bold #2d2d2d"
format = "[$all_status$ahead_behind]($style)[](fg:#99cc99)"
ahead = "⇡${count} "
behind = "⇣${count} "
diverged = "⇕⇡${ahead_count}⇣${behind_count} "
conflicted = "=${count} "
deleted = "✘${count} "
renamed = "»${count} "
modified = "!${count} "
staged = "+${count} "
untracked = "?${count} "
stashed = ""

# ============================================================================
# Command Duration
# ============================================================================

[cmd_duration]
min_time = 1000
style = "bg:#ffcc66 fg:bold #2d2d2d"
format = "[  $duration ]($style)[](fg:#ffcc66)"

# ============================================================================
# Language/Tool Versions (shown when relevant)
# ============================================================================

[nodejs]
symbol = " "
style = "bg:#33A34A fg:bold white"
format = "[ $symbol$version ]($style)"
detect_extensions = ["js", "mjs", "cjs", "ts", "tsx"]
detect_files = ["package.json", ".node-version"]
detect_folders = ["node_modules"]

[ruby]
symbol = " "
style = "bg:#CC342D fg:bold white"
format = "[ $symbol$version ]($style)"
detect_extensions = ["rb"]
detect_files = ["Gemfile", ".ruby-version"]

[elixir]
symbol = " "
style = "bg:#4B275F fg:bold white"
format = "[ $symbol$version ]($style)"
detect_extensions = ["ex", "exs"]
detect_files = ["mix.exs"]

[python]
symbol = " "
style = "bg:#FFD43B fg:bold #1a1a1a"
format = "[ $symbol$version ]($style)"
detect_extensions = ["py"]
detect_files = ["requirements.txt", "pyproject.toml", "Pipfile"]

[docker_context]
symbol = " "
style = "bg:#0db7ed fg:bold white"
format = "[ $symbol$context ]($style)"
detect_files = ["docker-compose.yml", "Dockerfile"]
